@model IEnumerable<Riviera_Business.Models.CPreAcondicionamiento>

@{
    ViewData["Title"] = "Index";
}

<h1>Lista</h1>

<p>
    <a asp-action="Create">Agregar Otro acondicionamiento</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Mec)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Refac)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Esteticos)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Hyp)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Trasl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TbCarrosIdCarrosNavigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Mec)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Refac)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Esteticos)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Hyp)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Trasl)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TbCarrosIdCarrosNavigation.NoSerie)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdPreAcondicionamiento">Corregir</a> |
                <a asp-action="Details" asp-route-id="@item.IdPreAcondicionamiento">Details</a> |
            </td>
        </tr>
}
    </tbody>
</table>
