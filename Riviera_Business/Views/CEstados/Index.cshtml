@model IEnumerable<Riviera_Business.Models.CEstados>

@{
    ViewData["Title"] = "Index";
}

<h1>Lista Estados</h1>

<p>
    <a asp-action="Create">Agregar Nuevo</a>
</p>
<p>En este apartado estan los estados que pueden tener tanto un Automovil como un proceso</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Descripcion)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Descripcion)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdEstados">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.IdEstados">Details</a> |
            </td>
        </tr>
}
    </tbody>
</table>
