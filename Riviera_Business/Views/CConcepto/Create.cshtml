@model Riviera_Business.Models.CConcepto

@{
    ViewData["Title"] = "Create";
}

<h1>Nuevo concepto</h1>

<hr />
<p>Apartado para llenar conceptos de Pago</p>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="DescripcionConcepto" class="control-label">Concepto:</label>
                <input asp-for="DescripcionConcepto" class="form-control" />
                <span asp-validation-for="DescripcionConcepto" class="text-danger"></span>
            </div>
            <div class="form-group" style="text-align:right;">
                <a class="btn btn-info" asp-action="Index">Lista de Conceptos</a>
                <input type="submit" style="margin-left:1%;" value="Agregar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
