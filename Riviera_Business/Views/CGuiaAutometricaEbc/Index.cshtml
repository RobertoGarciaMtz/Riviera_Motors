@model IEnumerable<Riviera_Business.Models.CGuiaAutometricaEbc>

@{
    ViewData["Title"] = "Index";
}


<h1>Lista</h1>
<script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.10.22/js/jquery.dataTables.js">
    (document).ready(function () {
        ('#dataTable').DataTable({
            data:dataTable
        });
    });
</script>

<p>
    <a asp-action="CreaEBC">LlenarGuia EBC</a>
    <a asp-action="CreaAutometrica">Llenar Autometrica</a>
</p>
<p>Contiene todos los Automoviles con todos sus respectivos precios y Guias </p>
<table class="table" id="dataTable">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Toma)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Venta)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Media)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GuiaAutometricaEbc)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fecha)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Usuario)
            </th>
            <th>
                Version
            </th>
            <th>
                Modelo
            </th>
            <th>
                Marca
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdEstadoNavigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Toma)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Venta)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Media)
                </td>
                <td>
                    @if (item.GuiaAutometricaEbc == 1)
                    {
                        <label value="@item.GuiaAutometricaEbc">Autometrica</label>
                    }
                    else
                    {
                        <label value="@item.GuiaAutometricaEbc">EBC</label>
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Fecha)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Usuario)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IdVersionNavigation.VersionCarro)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IdVersionNavigation.IdModeloNavigation.ModeloCarro)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IdVersionNavigation.IdModeloNavigation.IdMarcaNavigation.NombreMarca)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IdEstadoNavigation.Descripcion)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.IdGuiaAutometrica">Corregir</a> |
                    <a asp-action="Details" asp-route-id="@item.IdGuiaAutometrica">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.IdGuiaAutometrica">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
