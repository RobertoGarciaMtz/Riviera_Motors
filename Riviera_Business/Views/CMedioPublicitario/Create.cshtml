@model Riviera_Business.Models.CMedioPublicitario

@{
    ViewData["Title"] = "Create";
}

<h1>Agregar</h1>

<h4>Medio Publicitario</h4>
<hr />
<p>Agregrar medio publicitario Nuevo</p>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nombre" class="control-label">Escribir Nuevo Medio que agregar</label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdEstado" class="control-label"></label>
                <select asp-for="IdEstado" class ="form-control" asp-items="ViewBag.Estados"></select>
            </div>
            <div class="form-group" style="text-align:right;">
                <a class="btn btn-info" asp-action="Index">Lista de Medios</a>
                <input type="submit" value="Agregar" class="btn btn-primary" style="margin-left:1%;" />
            </div>
        </form>
    </div>
</div>

<div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
