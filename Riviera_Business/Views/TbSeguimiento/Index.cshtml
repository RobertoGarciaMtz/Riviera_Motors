@model IEnumerable<Riviera_Business.Models.TbSeguimiento>

@{
    ViewData["Title"] = "Index";
}

<h1>Lista Seguimiento</h1>

<p>
    <a asp-action="Create">Agregar nuevo muestreo</a>
</p>
<table border="0" cellspacing="5" cellpadding="5">
    <tbody>
        <tr>
            <td>Telefono:</td>
            <td><input type="text" id="min" name="min"></td>
        </tr>
        <tr>
            <td>Fecha:</td>
            <td><input type="text" id="max" name="max"></td>
        </tr>
    </tbody>
</table>
<table class="table" id="table-seguimiento">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NombreCompleto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefono)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Correo)
            </th>
            <th>
                Fecha Muestreo
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sexo)
            </th>
            <th>
                ¿Contesto Llamada?
            </th>
            <th>
                ¿Cita Previa?
            </th>
            <th>
                Fecha Llegda
            </th>
            <th>
                Contacto
            </th>
            <th>
                Num Serie
            </th>
            <th>
                Version
            </th>
            <th>
                Modelo
            </th>
            <th>
                Marca
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Asistio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Toma)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PruebaManejo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdTipoCompra)
            </th>
            <th>
                Termino en Venta
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Anticipo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CantidadAnticipo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Comentarios)
            </th>
            <th>
                Asesor
            </th>
            <th>
                Estado
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NombreCompleto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefono)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Correo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fecha)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sexo)
            </td>
            <td>
                @if (item.Contesto == 1)
                {
                    <label value="@item.Contesto">Si</label>
                }
                else
                {
                    <label value="@item.Contesto">No</label>
                }
            </td>
            <td>
                @if (item.Cita== 1)
                {
                    <label value="@item.Cita">Si</label>
                }
                else
                {
                    <label value="@item.Cita">No</label>
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaCita)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CMedioPublicitarioNavigation.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdCarroNavigation.NoSerie)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdCarroNavigation.IdVersionNavigation.VersionCarro)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdCarroNavigation.IdVersionNavigation.IdModeloNavigation.ModeloCarro)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdCarroNavigation.IdVersionNavigation.IdModeloNavigation.IdMarcaNavigation.NombreMarca)
            </td>
            <td>
                @if (item.Asistio == 1)
                {
                    <label value="@item.Asistio">Si</label>
                }
                else
                {
                    <label value="@item.Asistio">No</label>
                }
            </td>
            <td>
                
                @if (item.Toma == 1)
                {
                    <label value="@item.Toma">Si</label>
                }
                else
                {
                    <label value="@item.Toma">No</label>
                }
            </td>
            <td>
                
                @if (item.PruebaManejo == 1)
                {
                    <label value="@item.PruebaManejo">Si</label>
                }
                else
                {
                    <label value="@item.PruebaManejo">No</label>
                }
            </td>
            <td>
                
                @if (item.IdTipoCompra == 1)
                {
                    <label value="@item.IdTipoCompra">Retail</label>
                }
                else
                {
                    <label value="@item.IdTipoCompra">InterAgencias</label>
                }
            </td>
            <td>
                
                @if (item.Venta == 1)
                {
                    <label value="@item.Venta">Si</label>
                }
                else
                {
                    <label value="@item.Venta">No</label>
                }
            </td>
            <td>
                @if (item.Anticipo == 1)
                {
                    <label value="@item.Anticipo">Si</label>
                }
                else
                {
                    <label value="@item.Anticipo">No</label>
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CantidadAnticipo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Comentarios)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdAsesorNavigation.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdEstadoNavigation.Descripcion)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdSeguimiento" class="btn btn-succes">Editar/Llenar</a> |
                <a asp-action="Details" asp-route-id="@item.IdSeguimiento" class="btn btn-warning">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdSeguimiento">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>


<script>
    $.fn.dataTable.ext.search.push(
        function (settings, data, dataIndex) {
            var min = parseInt($('#min').val(), 10);
            var max = parseInt($('#max').val(), 10);
            var age = parseFloat(data[1]) || 0; // use data for the age column

            if ((isNaN(min) && isNaN(max)) ||
                (isNaN(min) && age <= max) ||
                (min <= age && isNaN(max)) ||
                (min <= age && age <= max)) {
                return true;
            }
            return false;
        }
    );

    $(document).ready(function () {
        var table = $("#table-seguimiento").DataTable({
            scrollX: "true"
        });
        $('#min, #max').keyup(function () {
            table.draw();
        });
    });

</script>