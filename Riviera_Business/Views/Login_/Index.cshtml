
<!--- Esta vista pertenece al controlador de login-->
@model Riviera_Business.Models.Usuarios

@{

    Layout = null;

    string ru = ViewData["ReturnURL"] as string;

}

<style>
    .login-la {
       position:relative;
       left:450px;
        top:100px;
        color:navajowhite;
    
       }

</style>

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <title>Login - Bootstrap Admin Template</title>

    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <meta name="apple-mobile-web-app-capable" content="yes">

    <link href="~/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/css/bootstrap-responsive.min.css" rel="stylesheet" type="text/css" />

    <link href="~/css/font-awesome.css" rel="stylesheet">
    <link href="http://fonts.googleapis.com/css?family=Open+Sans:400italic,600italic,400,600" rel="stylesheet">

    <link href="~/css/style.css" rel="stylesheet" type="text/css">
    <link href="~/css/pages/signin.css" rel="stylesheet" type="text/css">

</head>

<body style="background-color:black">

    <div class="navbar navbar-fixed-top">

        <div class="navbar-inner">

            <div class="container">

                <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </a>

                <div class="nav-collapse">
                    <ul class="nav pull-right">

                        <li class="">
                            <a asp-controller="Signup" asp-action="Index">
                                No tienes cuenta
                            </a>

                        </li>
                    </ul>

                </div><!--/.nav-collapse -->

            </div> <!-- /container -->

        </div> <!-- /navbar-inner -->

    </div> <!-- /navbar -->

    <img src="~/dist/img/isologo.png" style="width:150px;height:150px; position:relative; left:620px; top:10px"/>

    <div class="account-container" >

        <div class="content clearfix">

            <form asp-action="Index">

                <h1 style="position:relative; left:600px; top:30px; font-family:'Albertus MT'">Inicia sesión</h1>

                <div class="login-fields">

                    <div class="field">
                        <label for="username" class="login-la">Nombre Usuario:</label>
                        <input style = "position:relative; left:480px; top:100px; background-color:navajowhite;" type="text" asp-for="NombreUsuario" placeholder="Username" class="login username-field" />
                    </div> <!-- /field -->

                    <div class="field">
                        <label  for="password" class="login-la">Contraseña:</label>
                        <input style="position:relative; left:515px; top:100px; background-color:navajowhite;" type="password" asp-for="Contraseña" placeholder="Password" class="login password-field" />
                    </div> <!-- /password -->

                </div>
                <div class="login-actions">



                    <button  style="position:relative; left:600px;top:150px;" class="button btn btn-success btn-large">Sign In</button>

                </div> <!-- .actions -->



            </form>

        </div> <!-- /content -->

    </div> <!-- /account-container -->



    <script src="~/js/jquery-1.7.2.min.js"></script>
    <script src="~/js/bootstrap.js"></script>

    <script src="~/js/signin.js"></script>

</body>

</html>