@model Riviera_Business.Models.TbDocumentacion

@{
    ViewData["Title"] = "Create";
}

<script>
    function ocultar(select) {
        if (select.value == 1) {
            document.getElementById("desp1").style.display = "none";
            document.getElementById("desp11").style.display = "none";
            document.getElementById("desp11").value = 0;
            document.getElementById("desp2").style.display = "none";
            document.getElementById("desp22").style.display = "none";
            document.getElementById("desp22").value = 0;
        }
        if (select.value == 2) {
            document.getElementById("desp1").style.display = "block";
            document.getElementById("desp11").style.display = "block";
            
            document.getElementById("desp2").style.display = "block";
            document.getElementById("desp22").style.display = "block";
        }
    }
</script>
<h1>Agregar</h1>

<h4>Documentacion</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <select asp-for="PersonaFM" onchange="ocultar(this)" class="form-control">
                    <option value="1">Fisica</option>
                    <option value="2">Moral/Representante</option>
                </select>
                <span asp-validation-for="PersonaFM" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdentificacionVig" class="control-label"></label>
                <select asp-for="IdentificacionVig" class="form-control">
                    <option value="1">Si</option>
                    <option value="2">No</option>
                </select>
                <span asp-validation-for="IdentificacionVig" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Curp" class="control-label"></label>
                <select asp-for="Curp" class="form-control">
                    <option value="1">Si</option>
                    <option value="2">No</option>
                </select>
                <span asp-validation-for="Curp" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CifSat" class="control-label"></label>
                <select asp-for="CifSat" class="form-control">
                    <option value="1">Si</option>
                    <option value="2">No</option>
                </select>
                <span asp-validation-for="CifSat" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ComprobDomicilio" class="control-label"></label>
                <select asp-for="ComprobDomicilio" class="form-control">
                    <option value="1">Si</option>
                    <option value="2">No</option>
                </select>
                <span asp-validation-for="ComprobDomicilio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConocimientoDuenoBeneficiario" class="control-label"></label>
                <select asp-for="ConocimientoDuenoBeneficiario" class="form-control">
                    <option value="1">Si</option>
                    <option value="2">No</option>
                </select>
                <span asp-validation-for="ConocimientoDuenoBeneficiario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ActaConstitutivaBoletaRpc" id="desp1" class="control-label"></label>
                <select asp-for="ActaConstitutivaBoletaRpc" id="desp11" class="form-control">
                    <option value="0">---</option>
                    <option value="1">Si</option>
                    <option value="2">No</option>
                </select>
                <span asp-validation-for="ActaConstitutivaBoletaRpc" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PoderLegarExp" id="desp2" class="control-label"></label>
                <select asp-for="PoderLegarExp" id="desp22" class="form-control">
