            </div>
            <div class="form-group">
                <label asp-for="IdentificacionVig" class="control-label"></label>
                <select asp-for="IdentificacionVig">
                    <option value="1">Si</option>
                    <option value="2">No</option>
                </select>
                <span asp-validation-for="IdentificacionVig" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Curp" class="control-label"></label>
                <select asp-for="Curp">
                    <option value="1">Si</option>
                    <option value="2">No</option>
                </select>
                <span asp-validation-for="Curp" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CifSat" class="control-label"></label>
                <select asp-for="CifSat">
                    <option value="1">Si</option>
                    <option value="2">No</option>
                </select>
                <span asp-validation-for="CifSat" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ComprobDomicilio" class="control-label"></label>
                <select asp-for="ComprobDomicilio">
                    <option value="1">Si</option>
                    <option value="2">No</option>
                </select>
                <span asp-validation-for="ComprobDomicilio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConocimientoDuenoBeneficiario" class="control-label"></label>
                <select asp-for="ConocimientoDuenoBeneficiario">
                    <option value="1">Si</option>
                    <option value="2">No</option>
                </select>
                <span asp-validation-for="ConocimientoDuenoBeneficiario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ActaConstitutivaBoletaRpc" class="control-label"></label>
                <select asp-for="ActaConstitutivaBoletaRpc">
                    <option value="1">Si</option>
                    <option value="2">No</option>
                </select>
                <span asp-validation-for="ActaConstitutivaBoletaRpc" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PoderLegarExp" class="control-label"></label>
                <select asp-for="PoderLegarExp">
                    <option value="1">Si</option>
                    <option value="2">No</option>
                </select>
                <span asp-validation-for="PoderLegarExp" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConstanciaConocimiento" class="control-label"></label>
                <select asp-for="ConstanciaConocimiento">
                    <option value="1">Si</option>
                    <option value="2">No</option>
                </select>
                <span asp-validation-for="ConstanciaConocimiento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdEstado" class="control-label"></label>
                <select asp-for="IdEstado" class="form-control" asp-items="ViewBag.Estado"></select>
            </div>
            <div class="form-group">
                <label asp-for="Usuario" class="control-label"></label>
                <input asp-for="Usuario" class="form-control" />
                <span asp-validation-for="Usuario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdDatosPersona" class="control-label"></label>
                <select asp-for="IdDatosPersona" class="form-control" asp-items="ViewBag.Datospersona"></select>
            </div>
            <div class="form-group">
                <label asp-for="MesCorrespondiente" class="control-label"></label>
                <input asp-for="MesCorrespondiente" class="form-control" />
                <span asp-validation-for="MesCorrespondiente" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Lista Personas Moral</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
