@model IEnumerable<Riviera_Business.Models.CBanco>

@{
    ViewData["Title"] = "Index";
}

<h1>Lista Bancos</h1>

<p>
    <a asp-action="Create">Agregar Banco</a>
</p>
<table class="table" id="dataTable">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdBanco">Editar Nombre</a> |
                <a asp-action="Details" asp-route-id="@item.IdBanco">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdBanco">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
