@model IEnumerable<Riviera_Business.Models.CModeloCarro>

@{
    ViewData["Title"] = "Index";
}

<h1>Lista de Modelos</h1>

<p>
    <a asp-action="Create">Agregar Modelo o Unidad</a>
</p>
<p>Todos los modelos manejados por una empresa 
    Nota: Si se quiere buscar por Marca de automoviles escribir en el buscador</p>
<table class="table" id="dataTable">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ModeloCarro)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Usuario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdMarcaNavigation)
            </th>
            <th>Opciones</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ModeloCarro)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Usuario)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdMarcaNavigation.NombreMarca)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdModeloCarro">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.IdModeloCarro">Details</a> |
            </td>
        </tr>
}
    </tbody>
</table>
