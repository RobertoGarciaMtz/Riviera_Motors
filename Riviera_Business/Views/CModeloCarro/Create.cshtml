@model Riviera_Business.Models.CModeloCarro

@{
    ViewData["Title"] = "Create";
}

<h1>Agregar</h1>

<h4>Modelo o Unidad Carro</h4>
<hr />
<p>Agregar un nuevo modelo en caso de no existir</p>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="IdMarca" class="control-label">Marca:</label>
                <select asp-for="IdMarca" class="form-control" asp-items="ViewBag.Marcas"></select>
            </div>
            <p></p>
            <div class="form-group">
                <label asp-for="ModeloCarro" class="control-label">Modelo del Carro:</label>
                <input asp-for="ModeloCarro" class="form-control" />
                <span asp-validation-for="ModeloCarro" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Usuario" class="control-label"></label>
                <input asp-for="Usuario" class="form-control" />
                <span asp-validation-for="Usuario" class="text-danger"></span>
            </div>

            <div class="form-group" style="text-align:right;">
                <a asp-action="Index" class="btn btn-info">Ver Modelos</a>
                <input type="submit" value="Agregar" class="btn btn-primary" style="margin-left:1%;"/>
            </div>
        </form>
    </div>
</div>

<div>
    
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
